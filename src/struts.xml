<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ui.theme" value="simple" />
	<constant name="struts.action.extension" value="action" />
	
	<!-- 配置全局结果及异常映射 -->
	<package name="base-default" extends="json-default">
		<!-- 全局返回结果 -->
		<global-results>
			<result name="error" type="error">/WEB-INF/jsp/error.jsp</result>
			<result name="sysError">/WEB-INF/jsp/error.jsp</result>
			<result name="input">/WEB-INF/jsp/error.jsp</result>
		</global-results>
		
		<action name="user_*" method="{1}" class="cn.wellstudio.precisehelp.action.UserAction">
			<result></result>
		</action>
		
		<action name="admin_*" method="{1}" class="cn.wellstudio.precisehelp.action.AdminAction">
			
		</action>
		
		<action name="comments_*" method="{1}" class="cn.wellstudio.precisehelp.action.CommentAction">
		
		</action>
		
		<action name="express_*" method="{1}" class="cn.wellstudio.precisehelp.action.ExpressAction">
		
		</action>
		
		<action name="goods_*" method="{1}" class="cn.wellstudio.precisehelp.action.GoodsAction">
		
		</action>
		
		<action name="goodsArea_*" method="{1}" class="cn.wellstudio.precisehelp.action.GoodsAreaAction">
		
		</action>
		
		<action name="goodsType_*" method="{1}" class="cn.wellstudio.precisehelp.action.GoodsTypeAction">
		
		</action>
		
		<action name="goodsQuestion_*" method="{1}" class="cn.wellstudio.precisehelp.action.GoodsQuestionAction">
		
		</action>
		
		<action name="letter_*" method="{1}" class="cn.wellstudio.precisehelp.action.LetterAction">
		
		</action>
		
		<action name="order_*" method="{1}" class="cn.wellstudio.precisehelp.action.OrderAction">
		
		</action>
		
		<action name="shoppingCart_*" method="{1}" class="cn.wellstudio.precisehelp.action.ShoppingCartAction">
		
		</action>
		
		<action name="toAddress_*" method="{1}" class="cn.wellstudio.precisehelp.action.ToAddressAction">
		
		</action>
		
		
	</package>
	
	
	
	
	
</struts>
